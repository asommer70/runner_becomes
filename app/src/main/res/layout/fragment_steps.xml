<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thehoick.runnerbecomes.StepsFragment">

    <TextView
        android:id="@+id/textViewStepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textViewStepOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_one"
        android:layout_below="@+id/textViewStepTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewStepTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewStepOne"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="@string/step_two"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewStepThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewStepTwo"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="@string/step_three"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewStepFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewStepThree"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="@string/step_four"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewStepFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewStepFour"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="@string/step_five"
        android:textSize="16sp" />

</RelativeLayout>
</ScrollView>